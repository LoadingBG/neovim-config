"" Text settings
set enc=utf-8        " Set encoding to be UTF-8
set linebreak        " Break line on a breakable character
set scrolloff=5      " Leave 5 lines above/below cursor when scrolling
set tabstop=4        " Set tab to be 4 spaces
set expandtab        " Expand tabs to spaces
set autoindent       " Enable autoindentation
set shiftwidth=4     " Set autoindent to indent by 4 spaces
set pastetoggle=<F2> " Toggle paste mode with <F2>
